# InvestiGator Environment Variables
# Copy this file to ~/.investigator/env and update with your values
# Then source it before running: source ~/.investigator/env

# Stock Database (market data, symbols, prices)
export STOCK_DB_USER="stockuser"
export STOCK_DB_HOST="localhost"
export STOCK_DB_PORT="5432"
export STOCK_DB_NAME="stock"
export STOCK_DB_PASSWORD="your_stock_db_password"

# SEC Database (SEC filings, fundamentals)
export SEC_DB_USER="investigator"
export SEC_DB_HOST="localhost"
export SEC_DB_PORT="5432"
export SEC_DB_NAME="sec_database"
export SEC_DB_PASSWORD="your_sec_db_password"
# Legacy aliases (still supported)
export DB_HOST="${SEC_DB_HOST}"
export DB_PASSWORD="${SEC_DB_PASSWORD}"

# Optional: LLM API Keys
# export ANTHROPIC_API_KEY="your_anthropic_key"
# export OPENAI_API_KEY="your_openai_key"
