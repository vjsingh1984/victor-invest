# InvestiGator Environment Configuration
# Copy this file to .env and update with your values

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=sec_database
DB_USERNAME=investigator
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ============================================================================
# Ollama LLM Configuration
# ============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=300
OLLAMA_MAX_RETRIES=3
OLLAMA_KEEP_ALIVE=-1

# Model configuration
OLLAMA_DEFAULT_MODEL=qwen2.5:32b-instruct
OLLAMA_SYNTHESIS_MODEL=qwen2.5:32b-instruct
OLLAMA_FUNDAMENTAL_MODEL=qwen2.5:14b-instruct

# Multi-server pool (comma-separated URLs, optional)
# OLLAMA_SERVERS=http://server1:11434,http://server2:11434,http://server3:11434
OLLAMA_POOL_STRATEGY=most_capacity

# ============================================================================
# SEC EDGAR API Configuration
# ============================================================================
SEC_USER_AGENT=InvestiGator your.name@example.com
SEC_BASE_URL=https://data.sec.gov
SEC_RATE_LIMIT=10
SEC_CACHE_DIR=data/sec_cache
SEC_MAX_RETRIES=3
SEC_TIMEOUT=30

# ============================================================================
# Cache Configuration
# ============================================================================
CACHE_FILE_CACHE_DIR=data/file_cache
CACHE_PARQUET_CACHE_DIR=data/parquet_cache
CACHE_TTL_DEFAULT=3600
CACHE_TTL_LLM=21600
CACHE_TTL_TECHNICAL=86400
CACHE_TTL_FUNDAMENTAL=604800

# ============================================================================
# Monitoring & Metrics
# ============================================================================
MONITORING_ENABLED=true
MONITORING_EXPORT_INTERVAL=60
MONITORING_METRICS_PORT=9090

# ============================================================================
# Application Configuration
# ============================================================================
APP_NAME=InvestiGator
APP_VERSION=0.1.0
APP_ENVIRONMENT=development
APP_DEBUG=false

# Paths
APP_DATA_DIR=data
APP_RESULTS_DIR=results
APP_LOGS_DIR=logs

# Orchestrator settings
APP_MAX_CONCURRENT_ANALYSES=5
APP_MAX_CONCURRENT_AGENTS=10

# ============================================================================
# API Configuration (if enabled)
# ============================================================================
APP_API_HOST=0.0.0.0
APP_API_PORT=8000
APP_API_WORKERS=4

# ============================================================================
# Optional: Redis (for distributed caching)
# ============================================================================
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your_redis_password

# ============================================================================
# Optional: Email Notifications
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=investigator@example.com

# ============================================================================
# Development Settings
# ============================================================================
# Uncomment for development
# APP_DEBUG=true
# APP_LOG_LEVEL=DEBUG
# OLLAMA_TIMEOUT=600

# ============================================================================
# Production Settings
# ============================================================================
# Uncomment for production
# APP_ENVIRONMENT=production
# APP_DEBUG=false
# APP_LOG_LEVEL=INFO
# MONITORING_ENABLED=true
